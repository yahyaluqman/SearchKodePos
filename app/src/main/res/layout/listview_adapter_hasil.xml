<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_box"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="8">

    <TextView
        android:id="@+id/kodepos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2">

        <TableRow>

            <TextView android:text="Provinsi" />

            <TextView android:text=" : " />

            <TextView
                android:id="@+id/provinsi"
                android:gravity="end"
                android:text="-" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TableRow>

            <TextView android:text="Kota/Kabupaten" />

            <TextView android:text=" : " />

            <TextView
                android:id="@+id/kota"
                android:gravity="end"
                android:text="-" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TableRow>

            <TextView android:text="Kecamatan" />

            <TextView android:text=" : " />

            <TextView
                android:id="@+id/kecamatan"
                android:gravity="end"
                android:text="-" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TableRow>

            <TextView android:text="Kelurahan" />

            <TextView android:text=" : " />

            <TextView
                android:id="@+id/kelurahan"
                android:gravity="end"
                android:text="-" />
        </TableRow>
    </TableLayout>

</LinearLayout>